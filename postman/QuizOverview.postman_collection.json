{
  "info": {
    "name": "Quiz API - Overview & Pagination",
    "_postman_id": "b6a9f8d4-quiz-overview",
    "description": "Collection with sample requests for teacher overview (latest per class) and paginated quizzes/questions.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Teacher Overview (latest per class)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/quizzes/teacher/overview?latestPerClass=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quizzes", "teacher", "overview"],
          "query": [
            {
              "key": "latestPerClass",
              "value": "1"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Class Quizzes (paginated)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/classes/{{classId}}/quizzes?page=1&size=20",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "classes", "{{classId}}", "quizzes"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "size",
              "value": "20"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Quiz Questions (paginated)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/quizzes/{{quizId}}/questions?page=1&size=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "quizzes", "{{quizId}}", "questions"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "size",
              "value": "10"
            }
          ]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// You can set {{token}}, {{classId}}, {{quizId}} in Postman environment before running requests"
        ]
      }
    }
  ]
}
